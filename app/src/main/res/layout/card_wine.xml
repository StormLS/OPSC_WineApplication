<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/customColourNine"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="180dp"
                    android:layout_marginRight="20dp"
                    android:background="@color/customColourThree">

                    <ImageView
                        android:id="@+id/card_WineImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/no_image"></ImageView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/card_wineName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/poppins_semibold"
                        android:text="Example Wine"
                        android:textSize="16sp"></TextView>

                    <TextView
                        android:id="@+id/card_WineType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Wine Type"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/card_WineDesc"
                        android:layout_width="match_parent"
                        android:layout_height="47dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="The description of a wine will go here."
                        android:textSize="14sp"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp">

                        <Button
                            android:id="@+id/button"
                            android:layout_width="51dp"
                            android:layout_height="41dp"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="bottom|start|top|left"
                            android:paddingStart="1dp"
                            android:text="View"
                            android:textAllCaps="false"
                            android:textColor="@color/customColourFour"/>

                        <Button
                            android:id="@+id/button2"
                            android:layout_width="65dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="bottom|start|top|left"
                            android:paddingStart="1dp"
                            android:text="Edit"
                            android:textAllCaps="false"
                            android:textColor="@color/customColourFour"/>

                        <ImageButton
                            android:layout_width="50dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/customColourNine"
                            android:contentDescription="heart"
                            android:gravity="right"
                            android:src="@drawable/ic_heart">

                        </ImageButton>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

</RelativeLayout>