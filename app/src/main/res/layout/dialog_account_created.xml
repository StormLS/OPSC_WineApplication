<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:layout_gravity="center_horizontal"
        android:elevation="20dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="Welcome to Collector's Corner"
            android:textColor="@color/customColourOne"
            android:textSize="24dp" />

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="Your account has succesfully been created, time to start collecting!"
            android:textColor="@color/customColourFour"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btn_thanks"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom"
            android:layout_marginTop="50dp"
            android:background="@drawable/custom_container_login"
            android:text="Thanks!"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </LinearLayout>
</LinearLayout>