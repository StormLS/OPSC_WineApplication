<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".add_goal_fragment" >

    <Space
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="347dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center_horizontal"
        android:text="To set a goal per category, please select which category you could like to set a goal for. Then enter a number and press Set Goal."
        android:textColor="@color/black"
        android:textSize="17sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="23dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="27dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView38"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_regular"
            android:text="Select Category:"
            android:textSize="16sp" />

        <Space
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Spinner
            android:id="@+id/spinnerCat"
            style="@style/SpinnerTheme"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="spinner1" />

        <Space
            android:layout_width="37dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:orientation="horizontal">

        <Space
            android:layout_width="227dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="94dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_regular"
            android:text="Set Goal:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtGoal"
            android:layout_width="85dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:ems="10"
            android:fontFamily="@font/poppins_regular"
            android:hint="16"
            android:inputType="number"
            android:paddingStart="10dp"
            android:paddingTop="5dp" />

        <Space
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <Button
        android:id="@+id/btnSetGoal"
        android:layout_width="198dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/customColourFour"
        android:fontFamily="@font/poppins_regular"
        android:text="Set Goal"
        android:textAllCaps="false"
        android:textSize="17sp" />

</LinearLayout>